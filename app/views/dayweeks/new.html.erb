<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h1 class = "text-info">Добавление дня недели</h1>
     <br>
     <%= form_for :dayweek, url: dayweeks_path do |f| %>

         <p class = "text-info">Название дня недели</p>
         <%= f.text_field :brief, class: "form-control" %>
         <br>
         <%= f.submit 'Добавить день', class: "btn btn-info" %>

       <% end %>


  </div>
</div>
